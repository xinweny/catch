<h2>Users of <%= link_to Colony.find(params[:colony_id]).name, colony_path(Colony.find(params[:colony_id])) %> (<%= @users.length %>)</h2>
<% @users.each do |user| %>
  <p><%= link_to user.full_name, user_path(user) %></p>
  <% if current_user.colonies.include?(Colony.find(params[:colony_id])) %>
    <p><%= user.phone_number %></p>
    <p><%= user.email %></p>
  <% end %>
<% end %>
