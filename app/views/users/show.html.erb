<div class="profile-grid-container">

<!-- User profile picture column  -->

  <div class="column d-flex flex-column justify-content-center align-items-center" style="background-color: #f4f3eb; height: calc(100vh - 60px);">
    <%= image_tag user_avatar(@user), class: "w-50 h-auto rounded-circle mb-4"%>
    <div class="content text-center">
      <h4><%= @user.full_name %></h4>

      <% if @user.gender %>
        <p><%= @user.gender %>,
      <% if @user.age %>
        <%= @user.age %></p>
      <% end %>
      <% end %>
      <a href="#"><i class="fab fa-github" style="color: #66615b"></i></a>
      <a href="#"><i class="fab fa-instagram" style="color: #66615b"></i></a>
      <a href="#"><i class="fab fa-facebook" style="color: #66615b"></i></a>
      <a href="#"><i class="fab fa-twitter" style="color: #66615b"></i></a>
      <a href="#"><i class="fab fa-linkedin" style="color: #66615b"></i></a>
    </div>
  </div>


<!-- User info and Colonies column -->

  <div class="column d-flex flex-column justify-content-center align-items-center pt-5" style="background-color: white;">
    <div class="container pr-5 pl-5" style="width: 25rem;">
      <div class="content d-flex justify-content-between">
        <h4>User info</h4>
        <% if @user == current_user %>
          <%= link_to edit_user_registration_path do %>
            <i class="fas fa-edit"></i>
          <%end%>
        <% end %>
      </div>
      <div class="container mt-4" style="border-left: solid 5px #6bd098; line-height: 2;">
        <div class="content">
          Member since <%= @user.created_at.strftime("%B %Y") %>
        </div>
        <div class="d-inline-flex align-items-center">
          <i class="far fa-envelope mr-2"></i>  <%= @user.email %>
        </div>
        <br>
        <div class="d-inline-flex align-items-center">
          <i class="fas fa-phone mr-2"></i>  <%= @user.phone_number %>
        </div>
      </div>
    </div>


    <div class="container p-5" style="width: 25rem;">
      <h4>Colonies</h4>
      <div class="container mt-4" style="border-left: solid 5px #6bd098;">
      <% @user.colonies.each do |colony| %>
        <p><%= link_to colony.name, colony_path(colony) %>
        <% if @user.admin_groups.include?(colony) %>
          <span style="background-color: #fbc658; font-size: 10px; text-transform: uppercase; padding: 5px 10px; border-radius: 10px; height: 30px;">
            admin
          </span></p>
        <% end %>
      <% end %>
      </div>
    </div>
<!--
     -->
   </div>
    </div>
  </div>
</div>
