<%= simple_form_for [colony, cat] do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :status, collection: Cat.statuses.keys %>
  <%= f.input :description %>
  <%= f.input :sex, as: :radio_buttons, collection: Cat.sexes.keys, wrapper: :vertical_collection_inline %>
  <%= f.input :age, hint: 'In years' %>
  <%= f.input :health %>
  <%= f.input :microchip_id, label: 'Microchip ID (if known)' %>
  <% if cat.id.nil? %>
    <%= f.submit 'Add' %>
  <% else %>
    <%= f.submit 'Update' %>
  <% end %>
<% end %>
