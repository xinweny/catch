<div class="tab-content updates-cats" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-spotted" role="tabpanel" aria-labelledby="nav-spotted-tab" style="overflow-y: scroll; height: 300px;">
    <% if event.colony.cats.where(status: 0).empty? %>
      <p>No cats to show.</p>
    <% else %>
      <%= render 'events/event_cats', event_cats: event.colony.cats.where(status: 0).sort { |a, b| b.last_updated <=> a.last_updated } %>
    <% end %>
  </div>
