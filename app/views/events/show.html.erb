<h2><%= @event.title %></h2>
<% if policy(@event).update? %>
  <p><%= link_to 'Edit', edit_event_path(@event) %></p>
<% end %>
<% if policy(@event).destroy? %>
  <p><%= link_to 'Delete', event_path(@event), method: :delete, data: { confirm: "Delete this event?" } %></p>
<% end %>
<p><%= link_to @event.colony.name, colony_path(@event.colony) %></p>
<p>Started: <%= @event.start %></p>
<p>Estimated end: <%= @event.end %></p>
<p>Status: <%= @event.phase %></p>

<h3>Description</h3>
<p><%= @event.description %></p>

<h3>Participants</h3>
<% if @event.users.empty? %>
  <p>No participants yet.</p>
<% else %>
  <% @events.users.each do |user| %>
    <%= link_to user.full_name, user_path(user) %>
  <% end %>
<% end %>

<h3>Updates</h3>
<p>No updates yet.</p>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>

