<div class="events-grid-container">
  <div class="column">
    <div class="container my-5">
      <div class="container d-flex justify-content-between">
        <div class="content">
          <%= link_to "Back", root_path, class: "btn btn-search" %>
        </div>
        <div class="content">
          <% if policy(@event).update? %>
            <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary" %>
          <% end %>
          <% if policy(@event).destroy? %>
            <%= link_to 'Delete', event_path(@event), method: :delete, data: { confirm: "Delete this event?" }, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>

      <div class="container d-flex">
        <div class="container p-5 d-flex flex-column justify-content-center" style="background-color: white; border-bottom-left-radius: 10px; border-top-left-radius: 10px;">
          <div class="content">
            <h6 style="text-transform: uppercase"><%= @event.colony.name %></h6>
            <h3><%= @event.title %></h3>
            <h5 style="color: #51bcda"><%= @event.start.strftime("%-l:%M %p %b %-d %Y") %> to
            <%= @event.end.strftime("%-l:%M %p %b %-d %Y") %></h5>
            <br>
            <p><%= @event.description %></p>
          </div>
        </div>
        <!-- map -->
        <div
        id="map"
        style="width: 100%;
        height: 400px; border-top-right-radius: 10px; border-bottom-right-radius: 10px;"
        data-markers="<%= @markers.to_json %>"
        ></div>
        <!-- map -->
      </div>

      <div class="container my-4">
        <div class="update-grid-container" style="background-color: white; border-radius: 10px;">
          <div class="column">
            <div class="content d-flex flex-column justify-content-center" style="background-color: #fbc658; border-bottom-left-radius: 10px; border-top-left-radius: 10px; height: 100%; text-align: center;">
              <h4>Updates</h4>
            </div>
          </div>
          <div class="column p-5">
            <%= render 'progress_bar', colony: @colony, event: @event %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="column" style="background-color: #f7f5ed; height: calc(100vh - 20px - 20px);">
    <div class="container d-flex flex-column p-4">
      <h3>Participants</h3>
      <% if @event.users.empty? %>
        <p>No participants yet.</p>
      <% else %>
        <% @events.users.each do |user| %>
          <%= link_to user.full_name, user_path(user) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

