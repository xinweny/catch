<%= simple_form_for [colony, event] do |f| %>
  <%= f.input :title %>
  <%= f.input :start, label: 'Event start', as: :string, input_html: { class: "datepicker_start" } %>
  <%= f.input :end, label: 'Estimated event end', as: :string, input_html: { class: "datepicker_end" } %>
  <%= f.input :address, label: 'Meeting point' %>
  <%= f.input :description %>
  <%= f.input :phase, collection: Event.phases.keys %>
  <% if event.id.nil? %>
    <%= f.submit 'Create', class: "btn btn-success mt-2" %>
  <% else %>
  <%= f.submit 'Update' %>
  <% end %>
<% end %>
