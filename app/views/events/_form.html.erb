<%= simple_form_for [colony, event] do |f| %>
  <%= f.input :title %>
  <%= f.input :start %>
  <%= f.input :end, label: 'Estimated end time' %>
  <%= f.input :address, label: 'Meeting point' %>
  <%= f.input :description %>
  <%= f.input :phase, collection: Event.phases.keys %>
  <% if event.id.nil? %>
    <%= f.submit 'Create' %>
  <% else %>
  <%= f.submit 'Update' %>
  <% end %>
<% end %>
