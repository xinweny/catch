<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="width: 100%">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "catprint.png" %>
      <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% unless params[:controller] == 'pages' && params[:action] == 'home' %>
      <%= form_tag search_path, method: :get do %>
        <div class="d-flex align-items-center mr-5" style="position: relative;">
          <%= text_field_tag :query, params[:query], class: "form-control rounded-pill" %>
          <%= button_tag type: :submit, class: "btn btn-default search-button btn-s-md my-0 position-absolute px-2" do %>
            <i class="fa fa-search"></i>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active mr-2">
        <%= link_to new_cat_path do %>
          <%= image_tag("photocam.svg", alt: "logo", class: "logo mr-2") %>
        <%end%>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag user_avatar(current_user), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to 'Create a new colony', new_colony_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
