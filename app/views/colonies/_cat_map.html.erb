  <div class="d-flex my-4">
    <div class="sighted-cats p-5" style = "background-color: #f4f3eb;">
      <% cats.each do |cat| %>
        <div class="sighted-cat d-flex justify-content-between align-items-center my-2">
          <div class="checkbox-list mx-3">
            <%= check_box_tag 'colony[cat_ids][]', cat.id %>
          </div>
          <div class="cat">
            <%= cat.name %>
          </div>
          <div class="cat ml-2">
            <% if cat.photo %>
              <%= image_tag cat.photo.url(:thumbnail), class: 'rounded' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div
      id="map"
      style="width: 100%;
      height: 500px;
      position: sticky;
      top: 0;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>
