<div class="d-flex">
  <div class="cat-image">
    <%= image_tag cat.photo.url, class: 'card-image' %>
  </div>
  <div class="d-flex flex-column card-body justify-content-center" style="background-color: #eee; width: 250px;">
    <p class="card-title" style="font-size: 18px; text-transform: uppercase;"><strong><%= cat.name %></strong></p>
    <p class="card-description" style="font-size: 15px">
      <em><%= cat.description %></em></p>
    <p><i class="fas fa-binoculars"></i> <%= cat.created_at.strftime("%-l.%M %p, %-d %b %Y") %></p>
    <p><i class="fas fa-map-marked-alt"></i> <%= cat.address %></p>
  </div>
</div>
