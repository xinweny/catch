<%= simple_form_for colony do |f| %>
  <%= f.input :name %>
  <%= f.input :address, label: 'Area' %>
  <%= f.input :radius %>
  <%= f.input :description, as: :text %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.label :cats, label: 'Add cats' %>

  <div class="d-flex">
    <div class="sighted-cats">
      <% @cats.each do |cat| %>
        <div class="sighted-cat d-flex justify-content-between align-items-center">
          <%= check_box_tag 'colony[cat_ids][]', cat.id %>
          <p><%= cat.name %></p>
          <% if cat.photo %>
            <%= image_tag cat.photo.url(:thumbnail), class: 'rounded-circle' %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>

  <% if colony.id.nil? %>
    <%= f.submit 'Create', class: "btn btn-success" %>
  <% else %>
    <%= f.submit 'Update', class: "btn btn-primary" %>
  <% end %>
    <%= link_to "Back", root_path, class: "btn btn-search" %>
<% end %>

