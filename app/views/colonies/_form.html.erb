<%= simple_form_for colony, remote: false do |f| %>
  <%= f.input :name %>
  <%= f.input :address, label: 'Area' %>

  <%= render 'cat_map', cats: @cats %>

  <%= f.input :radius, label: 'Radius (km)' %>
  <%= f.input :description, as: :text %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <% if colony.id.nil? %>
    <%= f.submit 'Create', class: "btn btn-success" %>
  <% else %>
    <%= f.submit 'Update', class: "btn btn-primary" %>
  <% end %>
    <%= link_to "Back", root_path, class: "btn btn-search" %>
<% end %>

<%= content_for :after_js do %>
  <%= javascript_pack_tag 'search_cats' %>
<% end %>

